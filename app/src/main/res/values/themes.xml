<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Use a MaterialComponents DayNight parent so Android views and system UI better align with Compose theming -->
    <style name="Theme.ExpenseTrackerAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Provide explicit color resources for system UI and theme attributes -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>

        <!-- map basic color attributes to the palette colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSecondary">@color/colorSecondary</item>
    </style>
</resources>